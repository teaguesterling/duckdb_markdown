#===================================================================

# Test in transaction context (basic)
statement ok
BEGIN TRANSACTION;

query I
SELECT len(md_extract_code_blocks('```test
code
```'));
----
1

statement ok
ROLLBACK;

# Test with CTEs
query I
WITH test_data AS (
  SELECT '```python
print("test")
```' as markdown_content
)
SELECT len(md_extract_code_blocks(markdown_content))
FROM test_data;
----
1

# Test with window functions
query I
SELECT 
  content,
  len(md_extract_links(content)) as link_count,
  sum(len(md_extract_links(content))) OVER () as total_links
FROM (VALUES 
  ('[Link1](http://a.com)'),
  ('[Link2](http://b.com)'),
  ('No links here')
) as docs(content);
----
[Link1](http://a.com)	1	2
[Link2](http://b.com)	1	2
No links here	0	2